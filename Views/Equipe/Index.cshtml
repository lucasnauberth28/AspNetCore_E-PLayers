@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>Cadastro de Equipe</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data" class="cadastro"> 
    <div class="campo">
    <label>ID</label>
    <input type="text" name="IdEquipe" />
    </div>

    <div class="campo">
    <label>Nome</label>
    <input type="text" name="Name"/>
    </div>

    <div class="campo">
    <label>Imagem</label>
    <input type="file" name="Image"/>
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(Equipe equipes in ViewBag.Equipes)
        {
            <tr>
                <td>@equipes.IdEquipe</td>
                <td>@equipes.Name</td>
                <td><img src="img/Equipes/@equipes.Image" alt="Imagem da equipe @equipes.Name" width="40"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipes.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>